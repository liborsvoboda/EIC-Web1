{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "modules", "README.md"],
        "excludePattern": "(dist|node_modules|data|test|scripts|config|css|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "template": {
        "outputSourceFiles": true,
        "readme": "./README.md",
        "repository": "https://github.com/facebook/Rapid/"
    },
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : true
        },
        "applicationName": "Rapid",
        "footer"        : "Made with ♥ by the Maps Geo Team at Meta",
        "copyright"     : "©2023 by Rapid Contributors.",
        "disqus": "",
        "openGraph": {
            "title": "",
            "type": "website",
            "image": "",
            "site_name": "",
            "url": ""
        },
        "meta": {
            "title": "Rapid Code Documentation",
            "description": "Documentation for Rapid Application Source Code",
            "keyword": "docs, documentation, pixi, pixijs, renderer, html5, javascript, jsdoc, meta, OSM, maps, mapping, editing"
        },
        "linenums"      : true
    },
    "plugin/markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : false
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/@pixi/jsdoc-template",
        "export"        : "./docs/rapid.api.json"
    }
}